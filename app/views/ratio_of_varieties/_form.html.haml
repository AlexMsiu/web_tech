= form_for @ratio_of_variety do |f|
  - if @ratio_of_variety.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ratio_of_variety.errors.count, "error")} prohibited this ratio_of_variety from being saved:"
      %ul
        - @ratio_of_variety.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :ratio
    = f.text_field :ratio
  .field
    = f.label :grape_sort
    = f.text_field :grape_sort
  .field
    = f.label :wine_sort
    = f.text_field :wine_sort
  .actions
    = f.submit 'Save'
