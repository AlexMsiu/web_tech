= form_for @grape_sort do |f|
  - if @grape_sort.errors.any?
    #error_explanation
      %h2= "#{pluralize(@grape_sort.errors.count, "error")} prohibited this grape_sort from being saved:"
      %ul
        - @grape_sort.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :date_of_collection
    = f.date_select :date_of_collection
  = f.fields_for :ratio_of_varieties do |ratio_form|
    = ratio_form.label :ratio
    = ratio_form.text_field :ratio
    = ratio_form.label :wine_sort_id
    = ratio_form.select :wine_sort_id, options_for_select(WineSort.all.pluck(:name, :id))
  .actions
    = f.submit 'Save'
